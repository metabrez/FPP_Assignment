package lesson2;

public class CheckerBoard {

	public static void main(String[] args) {
		int count=0;
		for(int i=0;i<8;i++){
			count=0;
			System.out.println("\n");
			for(int j=0;j<8;j++){
				if(i%2==0)
				{
					System.out.print("*");
				}
				else if(count==0) {
					System.out.print(" ");
					count++;
					j=-1;
				}
				else{
					System.out.print("*");					
				}
			}
		}

	}

}
